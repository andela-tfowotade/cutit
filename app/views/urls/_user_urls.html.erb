<% @user_urls.each.with_index(1) do |url, index| %> 
  <tr> 
    <td scope="row"><%= index %></td> 
    <td>
      <%= url.long_url %>
    </td> 
    <td>
      <a href='<%= "#{root_url}#{url.short_url}" %>' target="_blank">
        <%= "#{root_url}#{url.short_url}" %>              
      </a>
    </td>
    <td>
      <%= time_ago_in_words(url.created_at) + " ago" %>
    </td>
    <td>
      <%= link_to "details", url %>
    </td>
    <td>
      <%= link_to "edit", edit_url_path(url) %>
    </td>
    <td>
    <%= link_to "delete", url, method: :delete,
        data: { confirm: "Are you sure you want to delete this url?" } %>
    </td>
  </tr> 
<% end %>