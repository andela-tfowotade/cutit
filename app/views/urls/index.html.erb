<div class="jumbotron intro">
  <h1>
    Shorten Urls Like a Boss!
  </h1>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

      <%= form_for :url, url: "/urls", html: { class: "form-inline" } do |f| %>
        <div class="form-group">
          <div class="input-group">
            <%= f.text_field :long_url, class: "form-control", placeholder: "Enter a link", required: true %>

            <div class="input-group-addon">
              <%= f.button "Cut it" %>
            </div>

          </div>
        </div>
      <% end %>

       <% if flash[:notice].present? %>
          <p class="text-center">
            <%= flash[:notice] %>
          </p>
        <% end %>

    </div>
  </div>
</div>