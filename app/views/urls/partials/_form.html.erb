<div class="row">    
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(@url) do |f| %>
      <% if @url.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @url.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :long_url, "Url" %><br>
        <%= f.url_field :long_url %>
      </div>
      <div class="field">
        <%= f.label :short_url, "Vanity string" %><br>
        <%= f.text_field :short_url %>
      </div>
      <div class="actions">
        <%= f.submit "Cut it" %>
      </div>
    <% end %>
  </div>

</div>
