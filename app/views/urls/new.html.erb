<%= render 'form' %>

<table class="table table-striped"> 
  <thead> 
    <tr> 
      <th></th> 
      <th>Long Url</th> 
      <th>Short Url</th> 
      <th>Created</th> 
    </tr> 
  </thead>


  <tbody>
    <% if @user_urls.nil? || @user_urls.empty? %>
      <tr>
        <td colspan="3">No Urls added yet!</td>
      </tr>
    <% else %>
      <% @user_urls.each.with_index(1) do |url, index|
      %> 
        <tr> 
          <td scope="row"><%= index %></td> 
          <td>
            <%= url.long_url %>
          </td> 
          <td>
            <a href='<%= "#{root_url}#{url.short_url}" %>' target="_blank">
              <%= "#{root_url}#{url.short_url}" %>              
            </a>
          </td>
          <td>
            <%= friendly_date url.created_at %>
          </td>
          <td>
            <%= link_to "details", url %>
          </td>
          <td>
            <%= link_to "edit", edit_url_path(url) %>
          </td>
          <td>
          <%= link_to "delete", url, method: :delete,
              data: { confirm: "Are you sure you want to delete this url?" } %>
          </td>
        </tr> 
      <% end %>
    <% end %>
  </tbody> 
</table>

<%= will_paginate @user_urls %>
