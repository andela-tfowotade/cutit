<div class="row">    
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%=render "shared/error_messages" %>

      <div class="field">
        <%= f.label :username %><br>
        <%= f.text_field :username, class: "form_control" %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email, class: "form_control" %>
      </div>
      <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password, class: "form_control" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "Confirmation" %><br>
        <%= f.password_field :password_confirmation, class: "form_control" %>
      </div>
      
      <div class="actions">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <p>Already have an account? <%= link_to "Log in now!", login_path %></p>
  </div>
</div>
